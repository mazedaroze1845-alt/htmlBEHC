  <section id="contact">
    <h2>বার্তা পাঠান</h2>
     <form id="messageForm" action="https://api.web3forms.com/submit" method="POST">
    <!-- ✅ Your Web3Forms access key -->
    <input type="hidden" name="access_key" value="8bfd573f-036e-486a-beba-e1205fd1fab0">
     <input type="text" id="name" name="name" placeholder="নাম" />
      <input type="text" id="dept" name="dept" placeholder="বিভাগ" readonly />
      <input type="email" id="email" name="email" placeholder="ইমেইল " readonly />
      <textarea id="message" name="message" placeholder="আপনার বার্তা লিখুন..." rows="5" required></textarea>
      <button type="submit">বার্তা পাঠান</button>
    </form>
  </section>

  <script>
    document.querySelectorAll(".message-btn").forEach(button => {
      button.addEventListener("click", () => {
        const name = button.dataset.name;
        const email = button.dataset.email;
        document.getElementById("dept").value = name || "";
        document.getElementById("email").value = email || "";
      });
    });

     // Show success or error without redirect
    document.getElementById("messageForm").addEventListener("submit", async function(e) {
      e.preventDefault();
      const form = e.target;

      const formData = new FormData(form);

      try {
        const response = await fetch(form.action, {
          method: form.method,
          body: formData,
          headers: {
            'Accept': 'application/json'
          }
        });

        if (response.ok) {
          alert("✅ আপনার বার্তা সফলভাবে পাঠানো হয়েছে!");
          form.reset();
        } else {
          alert("❌ বার্তা পাঠাতে সমস্যা হয়েছে। আবার চেষ্টা করুন।");
        }
      } catch (error) {
        console.error("Web3Forms Error:", error);
        alert("❌ বার্তা পাঠাতে সমস্যা হয়েছে।");
      }
    });
  </script>

